<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
      <% include ./partials/messages %>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
        <button id="githubButton" class="btn btn-dark btn-block">Login with GitHub<i style="font-size: 25px; margin-left: 15px;" class="fab fa-github"></i></button>
        <button id="steamButton" class="btn btn-dark btn-block">Login with Steam<i style="font-size: 25px; margin-left: 15px;" class="fab fa-steam"></i></button>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>
<script>
  const githubButton = document.getElementById('githubButton')
  const steamButton = document.getElementById('steamButton')
  githubButton.addEventListener('click', (e) => {
    e.preventDefault();
    location.href = 'http://localhost:5000/auth/github'
  })

  steamButton.addEventListener('click', (e) => {
    e.preventDefault();
    location.href = 'http://localhost:5000/auth/steam'
  })
</script>
